<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgg"
    tools:context=".HomeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <GridLayout
            android:layout_marginTop="150dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:rowCount="1"
            android:columnCount="2"
            android:alignmentMode="alignMargins"
            android:columnOrderPreserved="false">
            <androidx.cardview.widget.CardView
                android:layout_width="8dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:cardElevation="5dp"
                app:cardCornerRadius="5dp"
                app:cardUseCompatPadding="true"
                app:cardBackgroundColor="@color/white">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:layout_gravity="center_horizontal">
                    <ImageView
                        android:id="@+id/umbul"
                        android:layout_width="150dp"
                        android:layout_height="100dp"
                        android:src="@drawable/menuumbul"
                        android:layout_gravity="center_horizontal"
                        android:onClick="menu1" />
                    <TextView
                        android:id="@+id/umbultext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Umbul Sidomukti"
                        android:layout_gravity="center_horizontal"
                        android:textColor="@color/black"
                        android:onClick="deskripsi1"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rp 10.000"
                        android:id="@+id/harga1"
                        android:layout_gravity="center_horizontal"
                        android:textColor="@color/black"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="8dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:cardElevation="5dp"
                app:cardCornerRadius="5dp"
                app:cardUseCompatPadding="true"
                app:cardBackgroundColor="@color/white">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:layout_gravity="center_horizontal">
                    <ImageView
                        android:id="@+id/celosia1"
                        android:layout_width="150dp"
                        android:layout_height="100dp"
                        android:src="@drawable/celosia1"
                        android:layout_gravity="center_horizontal"
                        android:onClick="menu2"/>
                    <TextView
                        android:id="@+id/celosia1text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Taman Celosia 1"
                        android:layout_gravity="center_horizontal"
                        android:textColor="@color/black"
                        android:onClick="deskripsi2"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rp 15.000"
                        android:layout_gravity="center_horizontal"
                        android:textColor="@color/black"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="8dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:cardElevation="5dp"
                app:cardCornerRadius="5dp"
                app:cardUseCompatPadding="true"
                app:cardBackgroundColor="@color/white">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:layout_gravity="center_horizontal">
                    <ImageView
                        android:id="@+id/celosia2"
                        android:layout_width="150dp"
                        android:layout_height="100dp"
                        android:src="@drawable/celosia2"
                        android:layout_gravity="center_horizontal"
                        android:onClick="menu3"/>
                    <TextView
                        android:id="@+id/celosia2text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Taman Celosia 2"
                        android:layout_gravity="center_horizontal"
                        android:textColor="@color/black"
                        android:onClick="deskripsi3"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rp 20.000"
                        android:layout_gravity="center_horizontal"
                        android:textColor="@color/black"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="8dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:cardElevation="5dp"
                app:cardCornerRadius="5dp"
                app:cardUseCompatPadding="true"
                app:cardBackgroundColor="@color/white">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:layout_gravity="center_horizontal">
                    <ImageView
                        android:id="@+id/celosia3"
                        android:layout_width="150dp"
                        android:layout_height="100dp"
                        android:src="@drawable/celosia3"
                        android:layout_gravity="center_horizontal"
                        android:onClick="menu4"/>
                    <TextView
                        android:id="@+id/celosia3text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Taman Celosia 3"
                        android:layout_gravity="center_horizontal"
                        android:textColor="@color/black"
                        android:onClick="deskripsi4"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rp 25.000"
                        android:layout_gravity="center_horizontal"
                        android:textColor="@color/black"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="8dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:cardElevation="5dp"
                app:cardCornerRadius="5dp"
                app:cardUseCompatPadding="true"
                app:cardBackgroundColor="@color/white">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:layout_gravity="center_horizontal">
                    <ImageView
                        android:id="@+id/setyaaji"
                        android:layout_width="150dp"
                        android:layout_height="100dp"
                        android:src="@drawable/setyaaji"
                        android:layout_gravity="center_horizontal"
                        android:onClick="menu5"/>
                    <TextView
                        android:id="@+id/setyaajitext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Taman Bunga Setya Aji"
                        android:layout_gravity="center_horizontal"
                        android:textColor="@color/black"
                        android:onClick="deskripsi5"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rp 7.500"
                        android:layout_gravity="center_horizontal"
                        android:textColor="@color/black"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="8dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:cardElevation="5dp"
                app:cardCornerRadius="5dp"
                app:cardUseCompatPadding="true"
                app:cardBackgroundColor="@color/white">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:layout_gravity="center_horizontal">
                    <ImageView
                        android:id="@+id/susanspa"
                        android:layout_width="150dp"
                        android:layout_height="100dp"
                        android:src="@drawable/susanspa"
                        android:layout_gravity="center_horizontal"
                        android:onClick="menu6"/>
                    <TextView
                        android:id="@+id/susanspatext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Susan Spa and Resort"
                        android:layout_gravity="center_horizontal"
                        android:textColor="@color/black"
                        android:onClick="deskripsi6"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rp 25.000"
                        android:layout_gravity="center_horizontal"
                        android:textColor="@color/black"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </GridLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp">

            <TextView
                android:id="@+id/total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="Total : "
                android:textColor="@color/black"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/hasil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/hitungan"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@id/total"/>

        </RelativeLayout>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="next"
            android:onClick="checkout"
            android:layout_gravity="center_horizontal"/>

    </LinearLayout>

</ScrollView>